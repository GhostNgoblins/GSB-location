{% extends 'navAdmin.html.twig' %}

{% block title %}Infos Appartement{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class = "example-wrapper">

<h1>Fiche des Cotisation de <b><p>{{ proprietaire.getNomPe() }} {{ proprietaire.getPrenomPe() }}</p></b></h1><br>

<table class="table table-hover">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Cotisation</th>
        <th>Type</th>
      </tr>
    </thead>
    <tbody>
    {% for appartement in proprietaire.getAppartements() %}
      <tr>
      <td>{{ appartement.getNom() }}</td>
      <td>{{ (appartement.getPrixLoc()*30 + appartement.getPrixCharges()*30)*0.07 }} €</td>
      <td>{{ appartement.getType() }}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table><br>

            {% set sommeCotisation = 0 %}
            {% for appart in proprietaire.getAppartements() %}
            {% set sommeCotisation = sommeCotisation + (appart.getPrixLoc()*30 + appart.getPrixCharges()*30)*0.07 %}
            {% endfor %}
            <h3 class="table table-hover">Total des cotisations :</h3>
            <p>{{ sommeCotisation }} €</p>

</div>
{% endblock %}