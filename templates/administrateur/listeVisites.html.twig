{% extends 'navAdmin.html.twig' %}

{% block title %}GSBloc +{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

<table class="table table-hover">
  <thead>
    <tr>
    <th scope="col">Appartement</th>
    <th scope="col">Date visite</th>
    <th scope="col">Client</th>
    </tr>
  </thead>

  <tbody> 
    {% for visite in visites %}
    
    <tr>
        <td>
            <p>{{ visite.getAppartement().getNom() }}</p>
        </td>
         <td>
            <p>{{ visite.getDateVisite()|date('d/m/y') }}</p>
        </td>
        <td>
            <p>{{ visite.getClient().getPrenomPe() }} {{ visite.getClient().getNomPe() }}</p>
        </td>
    </tr>
    {% endfor %}

  </tbody>
</table><br><br>

</div>
{% endblock %}