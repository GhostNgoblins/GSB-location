{% extends 'navProprietaire.html.twig' %}

{% block title %}GSBloc +{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1550px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Mon appartement :</h1><br>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Type</th>
      <th scope="col">prix_location</th>
      <th scope="col">prix_charges</th>
      <th scope="col">rue</th>
      <th scope="col">arrondissmnt</th>
      <th scope="col">étage</th>
      <th scope="col">ascenseur</th>
      <th scope="col">préavis</th>
    </tr>
  </thead>

  <tbody> 
    <tr>
        <td>
            <p>{{ appartement.getNom() }}</p>
        </td>
        <td>
            <p>{{ appartement.getType() }}</p>
        </td>
        <td>
            <p>{{ appartement.getPrixLoc() }}</p>
        </td>
        <td>
            <p>{{ appartement.getPrixCharges() }}</p>
        </td>
        <td>
            <p>{{ appartement.getRue() }}</p>
        </td>
        <td>
            <p>{{ appartement.getArrondissement() }}</p>
        </td>
        <td>
            <p>{{ appartement.getEtage() }}</p>
        </td>
        <td>
            <p>{% if appartement.getAscenseur() == TRUE %}
            {% set ascenseur = 'oui' %}
            {% elseif appartement.getAscenseur() == FALSE %}
            {% set ascenseur = 'non' %}
            {% endif %}
            {{ ascenseur }}</p>
        </td>
        <td>
            <p>{% if appartement.getPreavis() == TRUE %}
            {% set preavis = 'oui' %}
            {% elseif appartement.getPreavis() == FALSE %}
            {% set preavis = 'non' %}
            {% endif %}
            {{ preavis }}</p>
        </td>
    </tr>

  </tbody>
</table><br><br>

        <div class="card">
  <div class="card-header bg-info" style="color:white;"><b>Info Locataire</b></div>
  <div class="card-body"><p> 

            {% if appartement.getLocataire() != NULL %}
    
            <p> <b>Nom</b> : {{ appartement.getProprietaire.getNomPe() }}</p>
            <p> <b>Prenom</b> : {{ appartement.getProprietaire.getPrenomPe() }}</p>
            <p> <b>Adresse</b> : {{ appartement.getProprietaire.getAdressePe() }}, {{ appartement.getProprietaire.getNomVille() }}, {{ appartement.getProprietaire.getCodePostal() }}</p>
            <p> <b>Tel</b> : 0{{ appartement.getProprietaire.getTelephonePe() }}</p>
            <p> <b>Email</b> : {{ appartement.getProprietaire.getEmail() }}</p>
            <p> <b>N° banque</b> : {{ appartement.getProprietaire.getTelBanque() }}</p>
            <p> <b>RIB</b> : {{ appartement.getProprietaire.getNumCpteBanque() }}</p>
            </div>
</div>
</div>
            {% else %}
    
            <p>Aucun locataire</p>
            
  </div>
</div>
</div> {% endif %} <br>
    </div>
</div><br>

</div>
{% endblock %}